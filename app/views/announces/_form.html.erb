<div class="container">


    <div class="row">
      <%= simple_form_for(@announce, html: { multipart: true }) do |f| %>

        <div class="col-md-6">
          <label>
            Titre principal de l'annonce
            <div class="form-group">
              <%= f.text_area :title, class: "form-control title-placeholder", placeholder:"Appartement sur Paris" %>
            </div>
          </label>
        </div>
        <div class="col-md-6">
          <label>
            La description du bien à vendre
            <div class="form-group">
              <%= f.text_area :description, label: false, class: "form-control description-placeholder", placeholder:"Appartement de 3 pièces composé d'un sejour double, une cuisine aménagée et équipée, 3 chambres, 1 salle de bains."%>
            </div>
          </label>
        </div>

        <div class="col-md-6">
          <label>
            Quel est son prix
            <div class="form-group">
              <div class="input-group">
                <%= f.input :price, label: false, class: "form-control price-placeholder", placeholder:"300000"%>
                <div class="input-group-addon">€</div>
              </div>
            </div>
          </label>
        </div>

        <div class="col-md-6">
          <label>
            Que vendez-vous ?
            <div class="form-group">

              <%= f.input :property_id, as: :select, collection: Property.all,label: false, class: "form-control" %>
            </div>
          </label>
        </div>


        <div class="col-md-12">
          <label>
            L'adresse du bien à vendre
        <fieldset>
        <div class="form-group">

          <input id="user_input_autocomplete_address" name="address" class="form-control" placeholder="25 Rue du petit Musc, 75004 Paris">
        </div>
      </fieldset>
      <fieldset>
        <input id="locality" name="locality" type="hidden">
      </fieldset>
      </label>
      </div>

        <div class="col-md-3">
          <label>
            Nombre de Chambre
            <div class="form-group">
              <%= f.input :bed, label: false, class: "form-control title-placeholder", placeholder:""%>
            </div>
          </label>
        </div>
        <div class="col-md-3">
          <label>
            Nombre de Salle de Bains
            <div class="form-group">
              <%= f.input :bath, label: false, class: "form-control title-placeholder", placeholder:""%>
            </div>
          </label>
        </div>
        <div class="col-md-3">
          <label>
          Surface Habitable
            <div class="form-group">
              <div class="input-group">
                <%= f.input :surface, label: false %>
                <div class="input-group-addon">m2</div>
              </div>
            </div>
          </label>
        </div>
        <div class="col-md-3">
          <label>
            Classification Energetique
            <div class="form-group">
              <%= f.input :class_energy, as: :select, collection: ["A","B","C","D","E","F","G"],label: false, class: "form-control" %>

            </div>
            <div class="mb-20"></div>
          </label>
        </div>
        <div class="col-md-3">
          <label>
            Photo principale
            <%= f.file_field :picture1, class: 'filestyle',
              :'data-classButton' => 'btn btn-primary',
              :'data-input' => 'false',
              :'data-buttonText' => 'Ajouter une photo'  %>
          </label>
        </div>

              <div class="col-md-3">
              <label>
                autre photo
                <%= f.file_field :picture2, class: 'filestyle',
                  :'data-classButton' => 'btn btn-primary',
                  :'data-input' => 'false',
                  :'data-buttonText' => 'Ajouter une photo'  %>
                </label>
              </div>

              <div class="col-md-3">
              <label>
                autre photo
                <%= f.file_field :picture3, class: 'filestyle',
                  :'data-classButton' => 'btn btn-primary',
                  :'data-input' => 'false', classIcon:  'icon-plus',
                  :'data-buttonText' => 'Ajouter une photo'  %>
                  </label>
              </div>

              <div class="col-md-3">
              <label>
                4eme photo
                <%= f.file_field :picture4, class: 'filestyle',
                  :'data-classButton' => 'btn btn-primary',
                  :'data-input' => 'false', classIcon:  'icon-plus',
                  :'data-buttonText' => 'Ajouter une photo'  %>
              </div>





  <div class="col-submit">
    <button type="submit">Submit</button>
  </div>

<% end %>
  </div>

</div>
